# Suppress: EC112
[*]
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = off
trim_trailing_whitespace = true

[*.cs]
max_line_length = 100

# https://marketplace.visualstudio.com/items?itemName=PaulHarrington.EditorGuidelines
guidelines = 100
guidelines_style = 1px dotted gray

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{*.{sln,*proj,*proj.*},packages.config}]
charset = unset
end_of_line = crlf
insert_final_newline = unset
indent_style = unset
indent_size = unset

[utils/prepare-release]
max_line_length = 100
guidelines = 100
guidelines_style = 1px dotted gray
